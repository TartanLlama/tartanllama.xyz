---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <Socials centered />
    <div>
      Based on <a
        class="inline-block text-accent decoration-dashed underline-offset-4 hover:underline"
        href="https://astro-paper.pages.dev">AstroPaper</a
      >
    </div>
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row">
      <span>&#169; {currentYear} Sy Brand</span>
    </div>
  </div>
</footer>
